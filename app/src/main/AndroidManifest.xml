            android:name="com.zidan.ybebrightapp.SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.zidan.ybebrightapp.login.LoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.zidan.ybebrightapp.agent.AgentActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.zidan.ybebrightapp.howto.HowToActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.zidan.ybebrightapp.product.ProductActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.zidan.ybebrightapp.main.MainActivity"
            android:screenOrientation="portrait" />
