<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".CourierFragment">

    <TextView
        android:id="@+id/tv_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pilih Jasa Pengiriman"
        android:textColor="@color/tosca"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_jne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_main" />

    <TextView
        android:id="@+id/tv_jne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="JNE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_jne"
        app:layout_constraintTop_toTopOf="@+id/img_jne" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_jne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_jne"
        android:layout_marginTop="10dp" />

    <ImageView
        android:id="@+id/img_pos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_jne" />

    <TextView
        android:id="@+id/tv_pos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="POS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_pos"
        app:layout_constraintTop_toTopOf="@+id/img_pos" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_pos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_pos"
        android:layout_marginTop="10dp" />

    <ImageView
        android:id="@+id/img_tiki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_pos" />

    <TextView
        android:id="@+id/tv_tiki"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="JNE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_tiki"
        app:layout_constraintTop_toTopOf="@+id/img_tiki" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_tiki"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_tiki"
        android:layout_marginTop="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>